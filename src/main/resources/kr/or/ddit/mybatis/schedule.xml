<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="schedule">

	<insert id="insertSchedule" parameterType="scheduleVO">
      INSERT 
         INTO SCHEDULE
            (
               s_no,
               s_memo,
               s_startdate,
               s_enddate,
               mem_no,
               s_color,
               s_alerttime)
         VALUES
             (
               schedule_seq.nextval,      
               #{s_memo},   
               #{s_startdate},
               #{s_enddate},
               #{mem_no},
               #{s_color},
               #{s_alerttime}
               )
         
   </insert>
   
	<insert id="busInfo" parameterType="busVO">
      INSERT 
         INTO BUS
            (
              bus_no,
              mem_no,
              city_code,
              bus_index)
         VALUES
             (    
               #{bus_no},   
               #{mem_no},
               #{city_code},
               bus_seq.nextval
               )
         
   </insert>
   
   
   
   <select id="scheduleList" resultType="scheduleVO" parameterType="String">
      SELECT *
      FROM SCHEDULE
      WHERE MEM_NO = #{mem_no}
   </select>
   
   <select id="bisList" resultType="busVO" parameterType="String">
      SELECT *
      FROM BUS
      WHERE MEM_NO = #{mem_no}
      ORDER BY TO_NUMBER(BUS_INDEX) DESC
   </select>
   
   <select id="scheduleInfo" resultType="scheduleVO" parameterType="Integer">
   	  SELECT *
   	  FROM SCHEDULE
   	  WHERE S_NO = #{s_no}
   </select>
   
    <delete id="deleteSchedule" parameterType="map">
      DELETE 
      FROM SCHEDULE
      WHERE S_NO = #{s_no}
   </delete>
    <delete id="deleteBus" parameterType="String">
      DELETE 
      FROM BUS
      WHERE BUS_INDEX = #{bus_index}
   </delete>
   
   
   <update id="updateSchedule" parameterType="scheduleVO">
      UPDATE SCHEDULE
         SET 
            S_MEMO    = #{s_memo}   
            ,S_STARTDATE = #{s_startdate}
            ,S_ENDDATE      = #{s_enddate}  
            ,S_COLOR      = #{s_color}     
            ,S_ALERTTIME = #{s_alerttime} 
         WHERE S_NO = #{s_no}
   </update>

</mapper>    

